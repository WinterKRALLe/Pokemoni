---
import Search from "./Search";
---

<header class="Header">
  <div class="Title">Pokemon</div>
  <Search client:load />
</header>

<style lang="scss">
  .Header {
    position: fixed;
    top: 0;
    z-index: 10;
    height: 70px;
    width: 100%;
    text-transform: uppercase;
    font-weight: 500;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    row-gap: 0.25rem;
    backdrop-filter: blur(6px);

    .Title {
      margin-top: 0.5rem;
      color: #080647;
      letter-spacing: 1px;
    }
  }
</style>
