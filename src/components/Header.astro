---
import Search from "./Search";
---

<header class="Header">
  <div class="Title">Pokemon</div>
  <div class="Search">
    <!-- <Search client:load /> -->
  </div>
</header>

  <style lang="scss">
    .Header {
      position: fixed;
      top: 0;
      z-index: 10;
      height: 70px;
      width: 100%;
      text-transform: uppercase;
      font-weight: 500;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      row-gap: 0.25rem;
      backdrop-filter: blur(6px);
  
      .Title {
        margin-top: 0.5rem;
        color: #080647;
        letter-spacing: 1px;
      }
  
      .Search {
        input {
          border: 1px solid #a7a7c1;
          border-radius: 25px;
          padding: 0.25rem 0.5rem;
          background: #ccd0e6;
  
          &:focus {
            outline: none !important;
          }
        }
      }
    }
  </style>
